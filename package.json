    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
